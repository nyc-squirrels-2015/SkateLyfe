<div class="auth_btns">
	<% if current_user %>
		<% user = current_user %>
		<h2>Welcome to SkateLyfe<%=user.name%>!</h2>
		<h4>Checkout Your Skate Community's Skate Skatelogs!</h4>

		<div class="btn_container">
			<a class="logout_btn" href="/logout">LOGOUT</a>
		</div>

		<div class="btn_container">
			<a href="/skatelogs/new">Add A Sesh</a>
		</div>
	
	<% else %>	
		<h2>Welcome to SkateLyfe!</h2>
		
		<div id="error">
		</div>
		
		<div class="btn_container">
			<a class="login_btn" href="/login">LOGIN</a>
			<%= erb :'auth/login'%>
		</div>



		<div class="btn_container">
			<a class="signup_btn" href="/signup">SIGNUP</a>
			<%= erb :'auth/signup'%>
		</div>

	<%end%>
</div>